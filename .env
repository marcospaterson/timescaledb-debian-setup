# Environment Variables for TimescaleDB Setup
# Copy this file to .env and customize with your values
# DO NOT commit the .env file to version control

# PostgreSQL Configuration
POSTGRES_PASSWORD=your_secure_password_here

# Database Configuration
DB_NAME=myapp_db
DB_USER=app_user
DB_PASSWORD=your_app_user_password
DB_HOST=localhost
DB_PORT=5432

# Data Persistence
TSDB_DATA_PATH=/mnt/timescaledb-data

# Network Configuration
STATIC_IP=192.168.1.100
GATEWAY=192.168.1.1
DNS_SERVERS="8.8.8.8 8.8.4.4"
NETMASK=255.255.255.0
INTERFACE=eth0

# Backup Configuration
BACKUP_PATH=/opt/timescaledb/backups
BACKUP_RETENTION_DAYS=30

# System Configuration
TIMEZONE=UTC
LOCALE=en_US.UTF-8

# Database Connection String (convenience)
DATABASE_URL=postgresql://app_user:your_app_user_password@localhost:5432/myapp_db
